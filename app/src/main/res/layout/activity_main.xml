<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Primera fila -->
    <!-- Campo de texto para la cantidad -->
    <EditText
        android:id="@+id/editTextCantidad1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Cantidad"
        android:gravity="center"
        android:inputType="number"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editTextPrecioUnitario1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <!-- Campo de texto para el precio unitario -->
    <EditText
        android:id="@+id/editTextPrecioUnitario1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Precio"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toEndOf="@+id/editTextCantidad1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <!-- Campo de texto para el precio total -->
    <EditText
        android:id="@+id/editTextPrecio1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Resultado"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPrecioUnitario1"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <!-- Segunda fila -->
    <!-- Campo de texto para la cantidad -->
    <EditText
        android:id="@+id/editTextCantidad2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Cantidad"
        android:gravity="center"
        android:inputType="number"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editTextPrecioUnitario2"
        app:layout_constraintTop_toBottomOf="@+id/editTextPrecio1"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <!-- Campo de texto para el precio unitario -->
    <EditText
        android:id="@+id/editTextPrecioUnitario2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Precio"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toEndOf="@+id/editTextCantidad2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPrecio1"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <!-- Campo de texto para el precio total -->
    <EditText
        android:id="@+id/editTextPrecio2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Resultado"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPrecioUnitario2"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <!-- Tercera fila -->
    <!-- Campo de texto para la cantidad -->
    <EditText
        android:id="@+id/editTextCantidad3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Cantidad"
        android:gravity="center"
        android:inputType="number"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editTextPrecioUnitario3"
        app:layout_constraintTop_toBottomOf="@+id/editTextPrecio2"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <!-- Campo de texto para el precio unitario -->
    <EditText
        android:id="@+id/editTextPrecioUnitario3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Precio"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toEndOf="@+id/editTextCantidad3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPrecio2"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <!-- Campo de texto para el precio total -->
    <EditText
        android:id="@+id/editTextPrecio3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Resultado"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPrecioUnitario3"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <!-- BotÃ³n para calcular -->
    <Button
        android:id="@+id/buttonCalcular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:text="Calcular"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPrecio3" />

</androidx.constraintlayout.widget.ConstraintLayout>